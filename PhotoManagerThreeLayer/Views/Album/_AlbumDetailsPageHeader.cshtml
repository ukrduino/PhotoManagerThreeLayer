@model PhotoManagerThreeLayer.ViewModels.AlbumDetailViewModel

<div class="row">
    <div class="col-lg-3">
        @if (Model.ImageId != null)
            {
            <img src="@Url.Action("GetAlbumImage", new { id = Model.ImageId})" class="smallImage" />
            }
            else
            {
                <img src="./../../Content/AlbumPlaceholder.jpg" class="smallImage" alt="Album cover not selected" />
            }
    </div>
    <div class="col-lg-9">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Created)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Created)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Modified)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Modified)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Author)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Author)
            </dd>
        </dl>
    </div>
</div>